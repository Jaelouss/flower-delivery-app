{
	"compilerOptions": {
		"target": "ES2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@UI": [
				"./src/components/UI"
			],
			"@store/*": [
				"./src/store/*"
			],
			"@styles": [
				"./src/styles"
			],
			"@components": [
				"./src/components"
			],
			"@icons/*": [
				"./src/images/icons/*"
			],
			"@pictures/*": [
				"./src/images/pictures/*"
			],
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/types/svgr.d.ts",
		"next-env.d.ts",
		"src/types",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/app/api/maps/route.js",
		"src/app/api/verify-recaptcha/route.js",
		"src/components/Recaptcha/Recaptcha.jsx",
		"src/app/api/coupons/[code]/route.js"
	],
	"exclude": [
		"node_modules"
	]
}